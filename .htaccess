<IfModule mod_rewrite.c>
    RewriteEngine on

    RewriteCond %{REQUEST_URI} ^/userdata/public
    RewriteRule ^(.*)$ - [L]

    RewriteCond %{REQUEST_URI} ^/userdata/
    RewriteRule ^userdata/(.*)$ userdata/public/$1 [L]

    RewriteCond %{REQUEST_URI} !^public
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>